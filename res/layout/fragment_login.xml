<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"  >

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:orientation="horizontal" >

        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/fragment_login_email"
            />
        <EditText android:id="@+id/fragment_login_username_edit"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                />

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal" >
        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="@string/fragment_login_password"
                />
        <EditText android:id="@+id/fragment_login_password_edit"
                  android:layout_width="250dp"
                  android:layout_height="wrap_content"
                  android:singleLine="true"
                  android:password="true"
                />
    </LinearLayout>

    <Button android:id="@+id/fragment_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_login_login_button" />

    <Button android:id="@+id/fragment_register_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_login_register_button"
            android:background="@null"
            android:textColor="#FFFFFF"
            />

    <Button android:id="@+id/fragment_forgot_password_button"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_login_forgot_password_button"
            android:background="@null"
            android:textColor="#FFFFFF"
            />

</LinearLayout>